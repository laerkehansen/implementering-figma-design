---
import "../styles/global.css";
import IdeasIntoReality from "../components/IdeasIntoReality.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import CoreValues from "../components/Core-values.astro";
import EmployeeContainer from "../components/EmployeeContainer.astro";
import ThreeEmployess from "../components/ThreeEmployess.astro";
import AccordionContainer from "../components/AccordionContainer.astro";
import Heroimg from "../components/Heroimg.astro";

const employeeData = await fetch(
  "https://raw.githubusercontent.com/daviatkea/frontend-design/main/resources/json/employees.json"
).then((res) => res.json());

const firstThreeEmployees = employeeData.slice(0, 3);
---

<BaseLayout>
  <Heroimg />
  <IdeasIntoReality />
  <CoreValues theme="greyMode" />
  <ThreeEmployess />
  <AccordionContainer exclusive="true" />
</BaseLayout>

<style>
  main {
    display: flex;
    justify-content: center; /* Centrerer vandret */
    align-items: center; /* Centrerer lodret */
    min-height: 100vh;
  }
</style>
