---
import "../styles/global.css";
import EmployeeContainer from "./EmployeeContainer.astro";

const employeeData = await fetch(
  "https://raw.githubusercontent.com/daviatkea/frontend-design/main/resources/json/employees.json"
).then((res) => res.json());

const firstThreeEmployees = employeeData.slice(0, 3);
---

<section>
  <div class="grid_1-1">
    <div class="text-box">
      <p>Our team</p>
      <h2>We champion the bold to achieve the extraordinary</h2>
      <p>
        Ippsum is the result of synergy between our teams and our customers. Our
        company culture is focused on excellent productivity, customer
        satisfaction, respect for team.
      </p>
    </div>
  </div>
  <EmployeeContainer data={firstThreeEmployees} />
</section>

<style>
  section {
    background-color: var(--secondary-02-white);
    color: var(--primary-03-black);
    padding-left: 12.6rem;
    padding-right: 12.6rem;
    padding-top: 8.6rem;
    /* padding-bottom: 8.6rem; */

    p {
      margin-bottom: var(--flow-space);
    }

    a {
      text-decoration: none;
      font-size: 1rem;
      color: var(--primary-03-black);
      background-color: var(--secondary-02-white);
      border-radius: 2rem;
      padding: 1rem;
    }
  }
  section h2 {
    font-size: var(--size-2);
    text-wrap: pretty;
    font-weight: 700;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(4, auto);
    gap: 2.25rem;
    color: var(--primary-03-black);

    .card {
      width: fit-content;
      background-color: var(--secondary-02-white);
      padding: 2.25rem 1.4375rem;
      border-radius: 1.25rem;

      .icon {
        max-width: 25%;
        margin-bottom: 1.38rem;
      }
    }
  }

  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: end;
    align-items: center;

    .link {
      justify-items: end;
      justify-self: end;
    }
  }
  p:first-child {
    background-color: var(--primary-01-yellow);
    width: fit-content;
    height: fit-content;
    letter-spacing: 0.145rem;
    text-transform: uppercase;
    padding: 0rem 1rem;
    color: var(--primary-03-black);
    border-radius: 2rem;
  }

  .text-box {
    max-width: 40.1875rem;
  }
</style>
