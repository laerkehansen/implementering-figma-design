---
import { Image } from "astro:assets";
import "../styles/global.css";
import { Icon } from "astro-icon/components";
const { theme = "greyMode" } = Astro.props;
const { theme2 = "darkMode" } = Astro.props;
---

<section data-core={theme}>
  <div class="grid_1-1">
    <div class="text">
      <p>Growing with our Clients</p>
      <h2>Our core values & principles</h2>
      <p>
        Capitalize on low hanging fruit to identify a ballpark value added
        activity beta test. Override the digital divide with additional from
        DevOps.
      </p>
    </div>
    <div class="link">
      <a href="/team">Get in touch</a>
    </div>
  </div>
  <div>
    <div class="cards">
      <div class="card">
        <Icon name="stack" class="icon" />
        <h3>Creative Ideas</h3><p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris eget
          accumsan augue Donec aliquam.
        </p><a href="">Read More</a>
      </div>
      <div class="card">
        <Icon name="graf" class="icon" />
        <h3>Best Features</h3><p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        </p>
        <a href="">Read More</a>
      </div>
      <div class="card">
        <Icon name="globe" class="icon" />
        <h3>Experience</h3><p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris eget
          accumsan augue Donec aliquam.
        </p><a href="">Read More</a>
      </div>
      <div class="card">
        <Icon name="settings" class="icon" />
        <h3>Easy Solutions</h3><p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        </p><a href="">Read More</a>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1150px) {
    section {
      background-color: var(--primary-03-black);
      color: var(--secondary-02-white);
      padding-left: 12.6rem;
      padding-right: 12.6rem;
      padding-top: 8.6rem;
      padding-bottom: 8.6rem;

      p {
        margin-bottom: var(--flow-space);
      }
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(4, auto);
      gap: 2.25rem;
      color: var(--primary-03-black);

      .card {
        width: fit-content;
        background-color: var(--secondary-02-white);
        padding: 2.25rem 1.4375rem;
        border-radius: 1.25rem;

        .icon {
          max-width: 25%;
          margin-bottom: 1.38rem;
        }
      }
    }

    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr auto;
      align-items: end;
      align-items: center;
      .link {
        justify-items: end;
        justify-self: end;
      }
    }
  }

  @media (max-width: 800px) {
    .grid_1-1 {
      display: grid;
      justify-content: center;
      .link {
        justify-items: end;
        /* justify-self: end; */
        padding: 0.9375rem 2.125rem;
        margin-bottom: var(--flow-space);
      }
    }
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(100px, 200px));
      gap: 2.25rem;
      color: var(--primary-03-black);
      justify-content: center;

      .card {
        /* max-width: 14.125rem; */
        background-color: var(--secondary-02-white);
        padding: 2.25rem 1.4375rem;
        border-radius: 1.25rem;

        .icon {
          max-width: 25%;
          margin-bottom: 1.38rem;
        }
      }
    }
  }

  @media (max-width: 1149px) {
    .grid_1-1 {
      display: grid;
      justify-content: center;
      .link {
        justify-items: end;
        /* justify-self: end; */
        padding: 0.9375rem 2.125rem;
        margin-bottom: var(--flow-space);
      }
    }
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 400px));
      gap: 2.25rem;
      color: var(--primary-03-black);
      justify-content: center;

      .card {
        /* max-width: 14.125rem; */
        background-color: var(--secondary-02-white);
        padding: 2.25rem 1.4375rem;
        border-radius: 1.25rem;

        .icon {
          max-width: 25%;
          margin-bottom: 1.38rem;
        }
      }
    }
  }

  [data-core="greyMode"] {
    background: #f5f5f5;
    color: var(--primary-03-black);

    section h2 {
      color: var(--primary-03-black);
    }

    .link a {
      background-color: var(--primary-03-black);
      color: var(--secondary-02-white);
      text-decoration: none;
      padding: 0.9375rem 2.125rem;
      border-radius: 2rem;
      margin-bottom: var(--flow-space);
    }
  }
  [data-core="darkMode"] {
    background: var(--primary-03-black);
    color: var(--secondary-02-white);

    section h2 {
      color: var(--secondary-02-white);
    }

    .link a {
      background-color: var(--secondary-02-white);
      color: var(--primary-03-black);
      text-decoration: none;
      padding: 0.9375rem 2.125rem;
      border-radius: 2rem;
      margin-bottom: var(--flow-space);
    }
  }
  p:first-child {
    background-color: var(--primary-01-yellow);
    width: fit-content;
    height: fit-content;
    letter-spacing: 0.145rem;
    text-transform: uppercase;
    padding: 0rem 1rem;
    color: var(--primary-03-black);
    border-radius: 2rem;
  }
  section h2 {
    font-size: var(--size-2);
    text-wrap: pretty;
    font-weight: 700;
  }
</style>
