---
import "../styles/global.css";
---

<div class="parent" style="--percent: 85%">
  <div class="child"></div>
  <h2>85%</h2>
</div>

<style>
  .parent {
    --offset-pos: 5px;
    border: var(--offset-pos) solid transparent;
    background:
      linear-gradient(var(--secondary-02-white), var(--secondary-02-white))
        padding-box,
      conic-gradient(
          var(--primary-01-yellow) var(--percent),
          var(--primary-03-black) 0
        )
        border-box;
    position: relative;
    align-content: center;
    text-align: center;

    .child {
      aspect-ratio: 1;
      border-radius: 99px;
      width: 20px;
      background: var(--primary-03-black);
      border: solid 5px var(--primary-01-yellow);
      position: absolute;
      offset-path: border-box;
      offset-distance: var(--percent);
      offset-anchor: 50% calc(50% - var(--offset-pos) / 2);
      display: flex;
      justify-content: center;
      align-items: center;

      .child h2 {
        color: white;
        font-size: 1.5rem;
        margin: 0;
      }
    }
  }

  .parent {
    aspect-ratio: 1;
    width: 150px;
    border-radius: 1e5px;
    margin-inline: auto;
  }
</style>
